<header>
  <div class="header_illustration">
    <%= image_tag 'fond_png.png', alt: 'banniÃ¨re du site' %>
  </div>
  <div class="header_logs">
    <h1>
      Connexion
    </h1>

      <%= simple_form_for resource, as: resource_name, url: session_path(resource_name) do |f| %>
        <div>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.input :email, autofocus: true, autocomplete: "email" %>
          <%= f.input :password, autocomplete: "current-password" %>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
        <% end %>
        </div>
        <div class="form_links">
          <%= f.submit 'Inscription' %>
          <%= render "devise/shared/links" %>
        </div>
      <% end %>

  </div>
</header>
