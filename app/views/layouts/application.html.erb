<!DOCTYPE html>
<html>
  <head>
    <title>Roll your characters</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag 'favicon.png' %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <div id="navigation_bar">
    <a class="logo_site" href="/"><%= image_tag 'logo_flat.svg', alt: 'logo dé de jeu de rôle' %></a>
    <div class="nav_links">
      <%= link_to 'Membres', users_path %>
      <% if current_user %>
        <div class="links_connected">
          <%= link_to current_user.pseudo, current_user %>
          <%= link_to 'éditer ton profil', edit_user_registration_path %>
          <%= button_to "logout", destroy_user_session_path, method: :delete  %>
        </div>
        <% else %>
        <div class="links_notconnected">
          <%= button_to new_user_session_path, class: 'login-button' do %>se connecter<% end %>
          <%= button_to new_user_registration_path, class: 'signup-button' do %>S'inscrire<% end %>
        </div>
      <% end %>
    </div>
  </div>

  <body>
    <%= yield %>
  </body>
</html>
