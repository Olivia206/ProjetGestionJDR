<p id="notice"><%= notice %></p>

<h1>Characters</h1>

<table>
  <thead>
    <tr>
      <th>Prenom</th>
      <th>Nom</th>
      <th>Avatar</th>
      <th>Sexe</th>
      <th>Monde</th>
      <th>Race</th>
      <th>Published at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= character.prenom %></td>
        <td><%= character.nom %></td>
        <td><%= character.avatar %></td>
        <td><%= character.sexe %></td>
        <td><%= character.monde %></td>
        <td><%= character.race %></td>
        <td><%= character.published_at %></td>
        <td><%= link_to 'Show', character %></td>
        <td><%= link_to 'Edit', edit_character_path(character) %></td>
        <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

